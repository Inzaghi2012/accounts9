table.info-table
  tr
    th= msg('client-id')
    td= appinfo.clientid
  tr
    th= msg('client-secret')
    td= appinfo.secret
  tr
    th= msg('app-desc')
    td= appinfo.desc
  tr
    th= msg('app-owners')
    td
      ul.operable-list!= partial('partials/appowner', appinfo.owners)
  tr
    th
    td
      - if (amOwner)
        a.button.default-button(href='/apps/' + appinfo.clientid + '/edit')= msg('edit-app-info')
        a.button.warning-button(href='/apps/' + appinfo.clientid + '/remove')= msg('remove-app')


h1 Register
- if (locals.error)
  #register-error!= msg('error-' + locals.error)
form(method="POST", action="/register")
  table#register-form
    tr
      th
        label(for="reg-username")= msg('Username')
        .tip#reg-username-tips!= msg('reg-username-tips')
      td
        input(type="text", id="reg-username", name="username", value=locals.userinfo ? userinfo.username : '')
    tr
      th
        label(for="reg-password")= msg('Password')
        .tip#reg-password-tips!= msg('reg-password-tips')
      td
        input(type="password", id="reg-password", name="password", value=locals.userinfo ? userinfo.password : '')
    tr
      th
        label(for="reg-bio")= msg('Bio')
      td
        textarea(id="reg-bio", name="bio")
    tr
      th
      td
        input(type="submit", id="reg-submit", value=msg('Submit'))


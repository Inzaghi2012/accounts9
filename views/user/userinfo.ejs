<table>
  <% if (user.nickname) { %>
    <tr>
      <th><%= msg('Nickname') %></th>
      <td><%= user.nickname %></td>
    </tr>
  <% } %>
  <% if (user.fullname) { %>
    <tr>
      <th><%= msg('full-name') %></th>
      <td><%= user.fullname %></td>
    </tr>
  <% } %>
  <% if (user.email) { %>
    <tr>
      <th><%= msg('Email') %></th>
      <td><a href="mailto:<%= user.email %>"><%= user.email %></a></td>
    </tr>
  <% } %>
  <% if (user.mobile) { %>
    <tr>
      <th><%= msg('Mobile') %></th>
      <td><%= user.mobile %></td>
    </tr>
  <% } %>
  <% if (user.website) { %>
    <tr>
      <th><%= msg('Website') %></th>
      <td><a href="<%= user.website %>" target="_blank"><%= user.website %></a></td>
    </tr>
  <% } %>
  <% if (user.address) { %>
    <tr>
      <th><%= msg('Address') %></th>
      <td><%= user.address %></td>
    </tr>
  <% } %>
  <% if (user.birthdate) { %>
    <tr>
      <th><%= msg('birth-date') %></th>
      <td><%= msg('birthdate-format', user.birthdate.slice(0, 4), user.birthdate.slice(4, 6), user.birthdate.slice(6, 8)) %></td>
    </tr>
  <% } %>
  <% if (user.bachelor && (user.bachelor.year || user.bachelor.classNumber)) { %>
    <tr>
      <th><%= msg('bachelor') %></th>
      <td>
        <% if (user.bachelor.year) { %>
          <%= user.bachelor.year %><%- msg('year') %>
        <% } %>
        <% if (user.bachelor.classNumber) { %>
          <%= user.bachelor.classNumber %><%- msg('class-number') %>
        <% } %>
      </td>
    </tr>
  <% } %>
  <% if (user.master && (user.master.year || user.master.classNumber)) { %>
    <tr>
      <th><%= msg('master') %></th>
      <td>
        <% if (user.master.year) { %>
          <%= user.master.year %><%- msg('year') %>
        <% } %>
        <% if (user.master.classNumber) { %>
          <%= user.master.classNumber %><%- msg('class-number') %>
        <% } %>
      </td>
    </tr>
  <% } %>
  <% if (user.doctor && (user.doctor.year || user.doctor.classNumber)) { %>
    <tr>
      <th><%= msg('doctor') %></th>
      <td>
        <% if (user.doctor.year) { %>
          <%= user.doctor.year %><%- msg('year') %>
        <% } %>
        <% if (user.doctor.classNumber) { %>
          <%= user.doctor.classNumber %><%- msg('class-number') %>
        <% } %>
      </td>
    </tr>
  <% } %>
  <% if (user.bio) { %>
    <tr>
      <th><%= msg('Bio') %></th>
      <td><%= user.bio %></td>
    </tr>
  <% } %>
  <tr>
    <th><%= msg('belong-groups') %></th>
    <td>
      <%- partial('../group/grouplistplain', user.directGroups) %>
    </td>
  </tr>
  <tr>
  <% if (user.adminGroups) { %>
    <th><%= msg('admin-groups') %></th>
    <td>
      <%- partial('../group/grouplistplain', user.adminGroups) %>
    </td>
  </tr>
  <% } %>
</table>

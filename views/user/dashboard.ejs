<div class="row">
  <div class="span6">
    <h2><%= msg('my-info') %></h2>
    <p>
      <a href="/editinfo" class="btn btn-primary">
        <i class="icon-edit icon-white"></i>
        <%= msg('edit-my-info') %>
      </a>
    </p>
    <%- partial('userinfo') %>
  </div>
  <div class="span3">
    <h2><%= msg('Apps') %></h2>
    <% if (apps.success) { %>
      <% if (apps.apps.length) { %>
        <ul>
          <%- partial('partials/appitem', apps.apps) %>
        </ul>
      <% } else { %>
        <%= msg('no-apps-yet') %>
      <% } %>
    <% } else { %>
      <p>
        <%= msg('error-retrieving-apps') %>
      </p>
    <% } %>
    <a href="/appreg" class="btn btn-primary">
      <i class="icon-plus icon-white"></i>
      <%= msg('register-new-app') %>
    </a>
  </div>
  <div class="span3">
    <h2><%= msg('authorized-apps') %></h2>
    <% if (apps.success) { %>
      <% if (apps.authorizedapps.length) { %>
        <ul>
          <%- partial('partials/appitem', apps.authorizedapps) %>
        </ul>
      <% } else { %>
        <%= msg('no-apps-yet') %>
      <% } %>
    <% } else { %>
      <p>
        <%= msg('error-retrieving-apps') %>
      </p>
    <% } %>
 </div>
</div>

<ul class="breadcrumb">
  <li>
    <a href="/">首頁</a>
    <span class="divider">/</span>
  </li>
  <li>
    <a href="/group">用戶組</a>
    <span class="divider">/</span>
  </li>
  <li class="active"><%= group.title %></li>
</ul>

<div class="row">
  <div class="span3">
    <h2><%= group.title %></h2>
    <% if (group.currentUserIsAdmin) { %>
      <p>
        <a href="/group/<%= group.name %>/edit" class="btn btn-primary">編輯組信息</a>
      </p>
    <% } %>
    <table class="table">
      <tr>
        <th><%- msg('group-name') %></th>
        <td><%= group.name %></td>
      </tr>
      <tr>
        <th><%- msg('group-title') %></th>
        <td><%= group.title %></td>
      </tr>
      <tr>
        <th><%- msg('group-desc') %></th>
        <td><%= group.desc %></td>
      </tr>
      <tr>
        <th><%- msg('group-admins') %></th>
        <td>
          <% for (var i in group.admins) { %>
            <a href="/u/<%= group.admins[i].name %>"><%= group.admins[i].title %></a>
          <% } %>
        </td>
      </tr>
      <% if (group.parent) { %>
        <tr>
          <th><%- msg('group-parent') %></th>
          <td>
            <a href="/group/<%= group.parent.name %>"><%= group.parent.title %></a>
          </td>
        </tr>
      <% } %>
      <tr>
        <th><%- msg('group-children') %></th>
        <td>
          <p>
            <% for (var i in group.children) { %>
              <a href="/group/<%= group.children[i].name %>">
                <%= group.children[i].title %>
              </a>
            <% } %>
          </p>
          <% if (group.currentUserIsAdmin) { %>
            <p>
              <a href="/group/<%= group.name %>/addgroup" class="btn btn-primary">添加子組</a>
            </p>
          <% } %>
        </td>
      </tr>
    </table>
  </div>
  <div class="span9">
    <h2><%- msg('group-users') %></h2>
    <% if (group.currentUserIsAdmin) { %>
      <p>
        <a href="/group/<%= group.name %>/adduser" class="btn btn-primary">添加用戶</a>
      </p>
    <% } %>
    <table class="table table-bordered table-condensed">
      <tr>
        <th><%= msg('uid') %></th>
        <th><%= msg('username') %></th>
        <th><%= msg('Nickname') %></th>
        <th><%= msg('full-name') %></th>
        <th><%= msg('Email') %></th>
        <th><%= msg('mobile') %></th>
        <th><%= msg('birth-date') %></th>
      </tr>
      <%- partial('partials/userlistitem', group.users) %>
    </table>
  </div>
</div>
